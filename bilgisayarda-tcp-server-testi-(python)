import socket
import time
import threading
import random
import json


def server_program():
    
  
    host = socket.gethostname()
    port = 80 
    print(host)
    server_socket = socket.socket()  
    server_socket.bind((host, port))  

    server_socket.listen(2)
    client, address = server_socket.accept()  
    print("baglanan IP: " + str(address))
    a=1
    def thread():
        x=0
        basinc=0
        t=0
        konum=0
        hiz=0
        ivme=0
        while True:    

            basinc= random.uniform(1,1.5)
            t+=0.1
            hiz = 1*t
            konum += 7
            ivme = 1
            temperature = random.uniform(26,30)

            
            veriler= {"sicaklik":temperature, "hiz":hiz, "basinc":basinc, "konum":konum, "ivme":ivme}
            data= json.dumps(veriler)
            data = str(data)
                                              
            client.send(data.encode())  
            time.sleep(0.050)
    t1 = threading.Thread(target=thread, args=())
    t1.start()        
    
    while True:
        data = client.recv(2048).decode()           
        print("alÄ±nan mesaj: " + str(data))

        

    
    

        
    

if __name__ == '__main__':
    server_program()
    
